<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" 
       xmlns:aop="http://www.springframework.org/schema/aop" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <import resource="common-context.xml" />
    <aop:aspectj-autoproxy />

    <util:properties id="remoteProperties" location="classpath:remote-client.properties" />

    <bean id="ehubClient" class="com.axiell.ehub.EhubClient">
        <property name="ehubBaseUri" value="#{remoteProperties['remote.ehubBaseUri']}"/>
    </bean>
    
    <bean id="failureAspect" class="com.axiell.ehub.ClientResponseFailureAspect"/>
</beans>
