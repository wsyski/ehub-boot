<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="persistence-context.xml"/>
    <import resource="facade-context.xml"/>

	<!-- List only the Admin Controllers here -->
	<bean id="consumerAdminController" class="com.axiell.ehub.consumer.ConsumerAdminController"/>
	<bean id="languageAdminController" class="com.axiell.ehub.language.LanguageAdminController"/>
	<bean id="contentProviderAdminController" class="com.axiell.ehub.provider.ContentProviderAdminController"/>
	<bean id="formatAdminController" class="com.axiell.ehub.provider.record.format.FormatAdminController"/>
	<bean id="userAdminController" class="com.axiell.ehub.user.UserAdminController"/>
    <bean id="databaseChangeLogAdminController" class="com.axiell.ehub.support.about.DatabaseChangeLogAdminController"/>
	<bean id="loanAdminController" class="com.axiell.ehub.loan.LoanAdminController"/>

    <bean id="supportRequestAdminController" class="com.axiell.ehub.support.request.SupportRequestAdminController">
        <property name="sslHttpClient" ref="sslHttpClient"/>
    </bean>
</beans>