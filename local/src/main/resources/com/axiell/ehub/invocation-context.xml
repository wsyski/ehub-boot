<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="business-controller-context.xml" />

	<!-- List only the JAX-RS Providers here, e.g. exception mappers, interceptors, converters etc. -->
	<bean class="com.axiell.ehub.util.RestEasyBadRequestExceptionMapper"/>
	<bean class="com.axiell.ehub.util.EhubRuntimeExceptionMapper"/>
    <bean class="com.axiell.ehub.util.RuntimeExceptionMapper"/>
	<bean class="com.axiell.ehub.security.AuthorizationHeaderInterceptor"/>
	<bean class="com.axiell.ehub.security.AuthInfoConverter"/>

	<!-- List only the JAX-RS root resources here -->

	<bean id="contentProvidersResource" class="com.axiell.ehub.provider.ContentProvidersResource">
		<property name="formatBusinessController" ref="formatBusinessController" />		
	</bean>

	<bean id="loansResource" class="com.axiell.ehub.loan.LoansResource">
		<property name="loanBusinessController" ref="loanBusinessController" />
	</bean>
</beans>