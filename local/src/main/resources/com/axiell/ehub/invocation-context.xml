<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="business-controller-context.xml" />

    <!-- List the resolver beans used by the JAX-RS resources -->
    <bean id="authInfoResolver" class="com.axiell.ehub.security.AuthInfoResolver"/>

	<bean class="com.axiell.ehub.security.AuthorizationHeaderInterceptor"/>
	<bean class="com.axiell.ehub.security.AuthInfoConverter"/>

	<!-- List only the JAX-RS root resources here -->

    <bean id="rootResource" class="com.axiell.ehub.RootResource">
        <property name="formatBusinessController" ref="formatBusinessController" />
        <property name="loanBusinessController" ref="loanBusinessController" />
    </bean>

	<bean id="rootResourceV2" class="com.axiell.ehub.v2.RootResource_v2">
		<property name="formatBusinessController" ref="formatBusinessController" />
		<property name="loanBusinessController" ref="loanBusinessController" />
	</bean>

	<bean id="contentProvidersResourceV1" class="com.axiell.ehub.v1.provider.ContentProvidersResource_v1">
		<property name="formatBusinessController" ref="formatBusinessController" />		
	</bean>

	<bean id="loansResourceV1" class="com.axiell.ehub.v1.loan.LoansResource_v1">
		<property name="loanBusinessController" ref="loanBusinessController" />
	</bean>
</beans>