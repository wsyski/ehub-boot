<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="business-controller-context.xml"/>
    <import resource="local-core-context.xml"/>
    <import resource="secret-key-context.xml"/>
    <import resource="auth-info-context.xml"/>

    <bean id="rootResourceV2" class="com.axiell.ehub.v2.RootResource_v2">
        <property name="issueBusinessController" ref="issueBusinessController"/>
        <property name="loanBusinessController" ref="loanBusinessController"/>
    </bean>

    <bean id="contentProvidersResourceV1" class="com.axiell.ehub.v1.provider.ContentProvidersResource_v1">
        <property name="issueBusinessController" ref="issueBusinessController"/>
    </bean>

    <bean id="loansResourceV1" class="com.axiell.ehub.v1.loan.LoansResource_v1">
        <property name="loanBusinessController" ref="loanBusinessController"/>
    </bean>
</beans>