<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="systimestamp" dbms="oracle"/>

    <changeSet id="1" author="ehub" dbms="oracle">
        <insert tableName="EHUB_CONSUMER_PROPERTY_KEY">
            <column name="PROPERTY_KEY" value="ARENA_LOCAL_API_ENDPOINT"/>
        </insert>
        <comment>Added Ehub Consumer Property Key property key ARENA_LOCAL_API_ENDPOINT</comment>
    </changeSet>

    <changeSet id="2" author="ehub" dbms="oracle">
        <sql>INSERT INTO EHUB_CONSUMER_PROPERTY(EHUB_CONSUMER_ID,PROPERTY_KEY,PROPERTY_VALUE) SELECT EHUB_CONSUMER_ID,'ARENA_LOCAL_API_ENDPOINT',PROPERTY_VALUE
            FROM EHUB_CONSUMER_PROPERTY WHERE PROPERTY_KEY='ARENA_PALMA_URL'
        </sql>
        <comment>Added value of ARENA_LOCAL_API_ENDPOINT</comment>
    </changeSet>

    <changeSet id="3" author="ehub" dbms="oracle">
        <delete tableName="EHUB_CONSUMER_PROPERTY">
            <where>PROPERTY_KEY IN ('ARENA_PALMA_URL')</where>
        </delete>
        <delete tableName="EHUB_CONSUMER_PROPERTY_KEY">
            <where>PROPERTY_KEY IN ('ARENA_PALMA_URL')</where>
        </delete>
        <comment>Delete ARENA_PALMA_URL</comment>
    </changeSet>

    <changeSet id="4" author="ehub" dbms="oracle">
        <sql>UPDATE CONTENT_P_CONSUMER_PROPERTY SET PROPERTY_VALUE = '3600' WHERE PROPERTY_KEY='EP_TOKEN_LEEWAY_IN_SECONDS'</sql>
        <comment>Updated value of EP_TOKEN_LEEWAY_IN_SECONDS</comment>
    </changeSet>

</databaseChangeLog>
