<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="dataSource" class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="dataSourceResource" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/ehub</Arg>
        <Arg>
            <New class="oracle.jdbc.pool.OracleDataSource">
                <Set name="DriverType">thin</Set>
                <Set name="URL"><SystemProperty name="hibernate.connection.url"/></Set>
                <Set name="User"><SystemProperty name="hibernate.connection.username"/></Set>
                <Set name="Password"><SystemProperty name="hibernate.connection.password"/></Set>
            </New>
        </Arg>
    </New>
</Configure>
