            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <!-- Generates Java classes from XML schemas -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>elib-loan-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>CreateLoan.xsd</include>
                            </schemaIncludes>
                            <generatePackage>se.elib.library.loan</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc1</generateDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>elib-orderlist-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>GetLibraryUserOrderList.xsd</include>
                            </schemaIncludes>
                            <generatePackage>se.elib.library.orderlist</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc2</generateDirectory>
                            <bindingDirectory>src/main/bindings/se/elib/library</bindingDirectory>
                            <bindingIncludes>
                                <include>GetLibraryUserOrderList.xjb</include>
                            </bindingIncludes>
                            <forceRegenerate>true</forceRegenerate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>elib-product-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>GetProduct.xsd</include>
                            </schemaIncludes>
                            <forceRegenerate>true</forceRegenerate>
                            <generatePackage>se.elib.library.product</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc3</generateDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <configuration>
                            <target>
                                <property name="maven_compile_classpath" refid="maven.compile.classpath" />
                                <property name="maven_test_classpath" refid="maven.test.classpath" />
                                <path id="hibernatetool.path">
                                    <pathelement path="${maven_compile_classpath}" />
                                    <pathelement path="${maven_test_classpath}" />
                                    <pathelement location="${project.build.directory}/classes" />
                                </path>
                                <taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="hibernatetool.path" />

                                <property name="hibernatetool.dir" value="${project.basedir}/src/sql/basic" />
                                <mkdir dir="${hibernatetool.dir}" />

                                <hibernatetool destdir="${hibernatetool.dir}">
                                    <classpath refid="hibernatetool.path" />
                                    <jpaconfiguration persistenceunit="ehub-db" propertyfile="${project.basedir}/src/main/resources/hibernate.properties" />
                                    <hbm2ddl export="false" format="true" outputfilename="schema.sql" />
                                </hibernatetool>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
