    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <!-- Must do this to make sure that html files are included when the jar
                file is built -->
            <resource>
                <filtering>false</filtering>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/xml</directory>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <configuration>
                    <ajdtVersion>none</ajdtVersion>
                </configuration>
            </plugin>

            <!-- Generates the eHUB schema from Java classes -->
            <plugin>
                <groupId>com.sun.tools.jxc.maven2</groupId>
                <artifactId>maven-jaxb-schemagen-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <srcdir>${project.basedir}/../common/src/main/java</srcdir>
                    <destdir>${project.basedir}/src/main/webapp/xsd</destdir>
                    <includes>
                        <include>**/ContentProviderFormats.java</include>
                        <include>**/PendingLoan.java</include>
                        <include>**/ReadyLoan.java</include>
                        <include>**/EhubError.java</include>
                        <include>**/ExportRecords.java</include>
                    </includes>
                    <schemas>
                        <schema>
                            <namespace>http://ehub.axiell.com</namespace>
                            <file>ehub.xsd</file>
                        </schema>
                    </schemas>
                    <verbose>true</verbose>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>${java.version}</version>
                        <scope>system</scope>
                        <systemPath>${java.home}/../lib/tools.jar</systemPath>
                    </dependency>
                </dependencies>
            </plugin>
            <!--
            <plugin>
               <groupId>org.jvnet.jax-ws-commons</groupId>
               <artifactId>jaxws-maven-plugin</artifactId>
               <executions>
                   <execution>
                       <goals>
                           <goal>wsimport</goal>
                       </goals>
                   </execution>
               </executions>
               <configuration>
                   <extension>true</extension>
                   <verbose>true</verbose>
                   <packageName>com.axiell.arena.palma</packageName>
                   <sourceDestDir>${project.build.directory}/generated-sources/wsdl1</sourceDestDir>
                   <wsdlDirectory>src/main/resources/com/axiell/arena/palma</wsdlDirectory>
                   <wsdlFiles>
                       <wsdlFile>loans.wsdl</wsdlFile>
                   </wsdlFiles>
               </configuration>
           </plugin>
           -->
           <plugin>
               <groupId>org.apache.cxf</groupId>
               <artifactId>cxf-codegen-plugin</artifactId>
               <executions>
                   <execution>
                       <id>generate-sources</id>
                       <phase>generate-sources</phase>
                       <configuration>
                           <sourceRoot>${project.build.directory}/generated-sources/wsdl1</sourceRoot>
                           <wsdlOptions>
                               <wsdlOption>
                                   <wsdl>${basedir}/src/main/resources/com/axiell/arena/palma/loans.wsdl</wsdl>
                                   <!--
                                   <extraargs>
                                       <extraarg>-impl</extraarg>
                                   </extraargs>
                                   -->
                               </wsdlOption>
                           </wsdlOptions>
                       </configuration>
                       <goals>
                           <goal>wsdl2java</goal>
                       </goals>
                   </execution>
               </executions>
           </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <!-- Generates Java classes from XML schemas -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>elib-loan-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>CreateLoan.xsd</include>
                            </schemaIncludes>
                            <generatePackage>se.elib.library.loan</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc1</generateDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>elib-orderlist-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>GetLibraryUserOrderList.xsd</include>
                            </schemaIncludes>
                            <generatePackage>se.elib.library.orderlist</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc2</generateDirectory>
                            <bindingDirectory>src/main/bindings/se/elib/library</bindingDirectory>
                            <bindingIncludes>
                                <include>GetLibraryUserOrderList.xjb</include>
                            </bindingIncludes>
                            <forceRegenerate>true</forceRegenerate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>elib-product-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>src/main/xsd/se/elib/library</schemaDirectory>
                            <schemaIncludes>
                                <include>GetProduct.xsd</include>
                            </schemaIncludes>
                            <forceRegenerate>true</forceRegenerate>
                            <generatePackage>se.elib.library.product</generatePackage>
                            <generateDirectory>${project.build.directory}/generated-sources/xjc3</generateDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-schema</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <arguments>
                                <argument>ehub-db</argument>
                                <argument>${project.basedir}/src/main/resources/hibernate.properties</argument>
                                <argument>${project.basedir}/src/test/persistence/sql/schema.sql</argument>
                                <argument>true</argument>
                                <argument>true</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <!--
					<classpathScope>test</classpathScope>
                    -->
                    <mainClass>com.axiell.ehub.util.JpaSchemaExport</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <archiveClasses>false</archiveClasses>
                    <attachClasses>true</attachClasses>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <container>
                        <containerId>tomcat7x</containerId>
                        <type>remote</type>
                    </container>
                    <configuration>
                        <type>runtime</type>
                        <properties>
                            <cargo.remote.username>deploy</cargo.remote.username>
                            <cargo.remote.password>gogetit</cargo.remote.password>
                            <cargo.hostname>localhost</cargo.hostname>
                            <cargo.servlet.port>16518</cargo.servlet.port>
                        </properties>
                    </configuration>
                    <deployables>
                        <deployable>
                            <groupId>com.axiell.ehub</groupId>
                            <artifactId>ehub-local</artifactId>
                            <type>war</type>
                            <properties>
                                <context>/</context>
                            </properties>
                        </deployable>
                    </deployables>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <database>oracle</database>
